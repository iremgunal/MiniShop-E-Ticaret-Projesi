@{
    ViewData["Title"] = "Home Page";
}

@model List<Product>
<div class="row">
    <div class="col-3">
        @* Categories gelecek *@
        @*CategoriesViewComponent adındaki ViewComponentimizi çağırıyoruz. ViewComponentleri çağırırken adındaki ViewComponent ifadesinin öncesindeki kısmı kullanıyoruz.*@
        @await Component.InvokeAsync("Categories")

    </div>
    <div class="col-9">
        @* Ana sayfa productları gelecek *@
        @if (Model.Count == 0)
        {
            @await Html.PartialAsync("_NoProduct")
        }
        else
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    @await Html.PartialAsync("_Product", product)
                }
            </div>
        }
    </div>
</div>

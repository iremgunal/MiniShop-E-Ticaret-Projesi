@model CategoryModel
<h1>Edit Category</h1>
<hr />
<form asp-controller="Admin" asp-action="CategoryEdit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            @*Buraya Product bilgileri gelecek*@
            <div class="form-group row mb-2">
                <div class="col-md-3">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-9">
                    <input type="text" asp-for="Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-3">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-md-9">
                    <input type="text" asp-for="Description" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group row mb-2">
                <div class="col-md-9 offset-3">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>

            </div>
        </div>
    
        <div class="col-md-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                <img src="~/images/@product.ImageUrl" width="50" />
                            </td>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            
                            <td>

                                    <a asp-controller="Admin"
                                       asp-action="ProductEdit"
                                       asp-route-id=@product.Id
                                       class="btn btn-sm btn-warning">Remove</a>
                                    

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
            }